<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#002D72"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alumni Success"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="120dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/backw"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="0dp"
                android:contentDescription="Back"
                android:src="@drawable/back_b" />


            <!-- Image -->

            <!-- Name -->

            <!-- Job -->

            <!-- Package -->

            <!-- Story -->

            <!-- Paragraph -->

            <ImageView
                android:id="@+id/imageSruthi"
                android:layout_width="330dp"
                android:layout_height="265dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/group296" />

            <TextView
                android:layout_width="283dp"
                android:layout_height="430dp"
                android:layout_marginLeft="20dp"
                android:text="After facing multiple job rejections, I realized I needed to upskill. I dedicated myself to learning full-stack development and open-source contributions. My persistence paid off when I got an offer from Microsoft. Failure is just a stepping stone to success!."
                android:textSize="25sp" />


        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
</RelativeLayout>
