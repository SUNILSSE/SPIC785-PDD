<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#002D72"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alumni Success"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="120dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/backe"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="0dp"
                android:contentDescription="Back"
                android:src="@drawable/back_b" />


            <!-- Image -->

            <!-- Name -->

            <!-- Job -->

            <!-- Package -->

            <!-- Story -->

            <!-- Paragraph -->

            <ImageView
                android:id="@+id/imageSruthi"
                android:layout_width="308dp"
                android:layout_height="255dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/group295" />

            <TextView
                android:layout_width="309dp"
                android:layout_height="449dp"
                android:layout_marginLeft="23dp"
                android:text="I co-founded a small AI startup during my final year, which gave me real-world experience in problem-solving and leadership. This experience helped me stand out in my Google interviews, where I now work as an AI Research Engineer. Never stop learning and building projects."
                android:textSize="25sp" />


        </LinearLayout>
    </ScrollView>

